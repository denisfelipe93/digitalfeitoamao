---
/* Layout base do site:
   - Importa Tailwind (global.css)
   - Define <html>, <head> e <body> padrão claro
   - Recebe props simples: title, description, ogImage
*/
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  bodyClass?: string;
}

const {
  title = 'Direção criativa — branding, identidade e conteúdo',
  description = 'Branding, identidade visual, conteúdo para mídias sociais e fotografia — direção criativa completa.',
  ogImage = '/og.jpg',
  bodyClass = 'bg-[#F7F7F5] text-[#0D0C0C]' // claro por padrão
} = Astro.props as Props;
---
<!doctype html>
<html lang="pt-BR" class="h-full">
  <head>
    <!-- Básico -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Open Graph / Twitter -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Fonts (substituir quando definirmos a tipografia) -->
    <!--
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    -->
  </head>

  <body class={`min-h-screen antialiased ${bodyClass}`}>
    <!-- Link de acessibilidade -->
    <a href="#conteudo" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:z-50 focus:px-3 focus:py-2 focus:rounded-md focus:bg-black focus:text-white">
      Pular para o conteúdo
    </a>

    <!-- Conteúdo da página -->
    <main id="conteudo">
      <slot />
    </main>
  </body>
</html>
